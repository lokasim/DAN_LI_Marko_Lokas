<Window x:Class="MedicalInstitution.Views.PatientMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalInstitution.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="PatientMenu" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="40"
                   Foreground="DeepPink">Meni pacijenta</TextBlock>
        <Button Name="Napusti"
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Logout_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White">Odjavite se</TextBlock>
                <materialDesign:PackIcon Kind="Logout"
                                         VerticalAlignment="Center"
                                         Margin="20,0,0,0"
                                         Height="25"
                                         Width="25" />
            </StackPanel>
            
        </Button>
    </Grid>
</Window>
